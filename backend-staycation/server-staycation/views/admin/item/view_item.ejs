<%- include('../../partials/header.ejs') %>
    <!-- Page Wrapper -->
    <div id="wrapper">
        <%- include('../../partials/sidebar.ejs') %>
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <!-- Topbar -->
                    <%- include('../../partials/navbar.ejs') %>
                        <!-- End of Topbar -->
                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <%- include('../../partials/message.ejs') %>
                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800">Item</h1>
                            <!-- end heading -->
                            <% if(action == 'view') { %>
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="home-tab" data-toggle="tab"
                                            data-target="#show-item" type="button" role="tab" aria-controls="home"
                                            aria-selected="true">Show Item</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="profile-tab" data-toggle="tab" data-target="#add-item"
                                            type="button" role="tab" aria-controls="profile" aria-selected="false">Add
                                            Item</button>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <%- include('show_table_item.ejs') %>
                                    <%- include('add_item.ejs') %>
                                </div>

                            <% } else if(action == 'show image'){ %>

                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <button class="nav-link active" id="home-tab" data-toggle="tab"
                                                data-target="#show-image" type="button" role="tab" aria-controls="home"
                                                aria-selected="true">Show Image</button>
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                        <%- include('show_image_item.ejs') %>
                                    </div>

                            <% } %>
                            

                        </div>
                        <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->
                <%- include('../../partials/footer.ejs') %>
            </div>
            <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <%- include('../../partials/logout_modal.ejs') %>
    <%- include('../../partials/js.ejs') %>

    <script>
        CKEDITOR.replace('description');
    </script>